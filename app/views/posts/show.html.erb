<% content_for :page_title, "This audbee is called " + @post.title %>
<section class="section">
    <div class="container">
        <nav class="level-right">
            <div class="level-left">
                <p class="level-item">
                <strong>&gt;</strong>
                </p>
            </div>

            <div class="level-right">
                <p class="level-item">
                    <%= link_to "Modify", edit_post_path(@post), class: "button" %>
                </p>
                <p class="level-item">
                <%= link_to "Remove", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-danger" %>
                </p>
            </div>
        </nav>
    </div>
    <hr/>
    <div>
        <%= @post.content %>
    </div>
</section>

