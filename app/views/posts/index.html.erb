<h1 class="title">Audbees</h1>
<section>
    <div class="container"> 
        <% @posts.each do |post| %>
            <div class="card">
                <div class="card-content">
                    <div class="media">
                        <p class="title is-4"><%= link_to post.title, post %> </p>
                    </div>
                </div>
                <div class="card-content">
                    <%= post.content %>
                </div>
            </div>

        <% end %>
    </div>
</section>
